<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".dialog.MainActivity">

    <Button
            android:id="@+id/dialogBtn"
            android:text="Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/customDialogBtn"
            android:text="Custom Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/dateDailogBtn"
            android:text="Date Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/timeDailogBtn"
            android:text="Time Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/okCancelBtn"
            android:text="Ok Cancel Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/listDialogBtn"
            android:text="Dialog list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>